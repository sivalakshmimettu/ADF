name: Deploy without jq

on:
  workflow_dispatch:
    inputs:
      environment:
        description: 'Target environment (qa or prod)'
        required: true
        default: 'qa'  # Default to 'qa'
        type: choice
        options:
          - qa
          - prod

jobs:
  deploy:
    runs-on: ubuntu-latest

    env:
      TARGET_ENV: ${{ github.event.inputs.environment }}
      FACTORY_NAME: ${{ vars.FACTORY_NAME }}  # GitHub Variable for FACTORY_NAME
      SERVICE_ENDPOINT: ${{ vars.SERVICE_ENDPOINT }}  # GitHub Variable for SERVICE_ENDPOINT
      CONFIG_VALUES: ${{ vars[github.event.inputs.environment] }}

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Show selected environment
        run: |
          echo "Deploying to environment: $TARGET_ENV"
          echo "Loaded CONFIG_VALUES: $CONFIG_VALUES"

      - name: Extract config values and export as environment variables
        run: |
          for pair in ${CONFIG_VALUES//;/ }; do
            IFS='=' read -r key value <<< "$pair"
            echo "$key=$value"
            echo "$key=$value" >> $GITHUB_ENV
          done

      - name: Debug environment variables
        run: |
          echo "FACTORY_NAME = $FACTORY_NAME"
          echo "SERVICE_ENDPOINT = $SERVICE_ENDPOINT"

      - name: Show parameters.json before modification
        run: |
          echo "Showing parameters.json before update:"
          cat ARMTemplateForFactory/parameters.json

      - name: Update parameters.json using sed
        run: |
          echo "Replacing factoryName and serviceEndpoint in parameters.json..."

          # Escape special characters like /, &, etc. in FACTORY_NAME and SERVICE_ENDPOINT
          ESCAPED_FACTORY_NAME=$(echo "$FACTORY_NAME" | sed 's/[&/\]/\\&/g')
          ESCAPED_ENDPOINT=$(echo "$SERVICE_ENDPOINT" | sed 's/[&/\]/\\&/g')

          # Check the file before modification
          echo "Checking the parameters.json before modification"
          cat ARMTemplateForFactory/parameters.json

          # Update the factoryName value
          sed -i "s#\"factoryName\": {[^}]*\"value\": \".*\"#\"factoryName\": { \"value\": \"$ESCAPED_FACTORY_NAME\" }#g" ARMTemplateForFactory/parameters.json

          # Update the serviceEndpoint value
          sed -i "s#\"LS_ABLOB_properties_typeProperties_serviceEndpoint\": {[^}]*\"value\": \".*\"#\"LS_ABLOB_properties_typeProperties_serviceEndpoint\": { \"value\": \"$ESCAPED_ENDPOINT\" }#g" ARMTemplateForFactory/parameters.json

      - name: Show parameters.json after modification
        run: |
          echo "Showing parameters.json after update:"
          cat ARMTemplateForFactory/parameters.json

      - name: Upload ARM Template and Parameters as Artifact
        uses: actions/upload-artifact@v4
        with:
          name: arm-template-${{ github.run_number }}-${{ github.event.inputs.environment }}
          path: |
            ARMTemplateForFactory/parameters.json
            ARMTemplateForFactory/ARMTemplate.json
